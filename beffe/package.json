{
  "name": "beffe",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "ts-run": "ts-node ./src/index.ts",
    "build": "tsc",
    "prod-start": "node ./dist/index.js gateway",
    "start": "npm run server-server",
    "unusedserver:gateway-fed": "wait-on tcp:4001 && node dist/index.js gateway -f example-config.yaml",
    "devserver": "npm run build && concurrently npm:devserver-build npm:devserver-serve",
    "devserver-build": "npm run build -- -w",
    "devserver-serve": "STITCH_FILE=example-config.yaml OAS_FILE=oas2graphql-config.yaml nodemon -w dist --exec 'npm run server'",
    "server": "concurrently -k npm:server:*",
    "server:oas2graphql": "wait-on tcp:4001 && node dist/index.js oas2graphql",
    "server:gateway-stitch": "wait-on tcp:4002 tcp:4001 && node dist/index.js gateway-stitch",
    "server:accounts": "node dist/accounts/index.js --federated",
    "prepare": "npm run build",
    "pretest": "npm run build",
    "posttest": "npm run lint"
  },
  "keywords": [
    "GraphQL",
    "Backend for Frontend"
  ],
  "author": "Ben Greene",
  "license": "ISC",
  "dependencies": {
    "@apollo/gateway": "^0.21.4",
    "apollo-link-http": "^1.5.17",
    "apollo-server": "^2.18.2",
    "apollo-server-express": "^2.18.2",
    "concurrently": "^5.3.0",
    "cross-fetch": "^3.0.6",
    "express": "^4.17.1",
    "figlet": "^1.5.0",
    "got": "^11.8.1",
    "graphql": "^15.3.0",
    "js-yaml": "^3.14.1",
    "nodemon": "^2.0.5",
    "openapi-to-graphql": "^2.2.5",
    "ts-node": "^9.0.0",
    "wait-on": "^5.2.0",
    "yargs": "^16.1.0"
  },
  "devDependencies": {
    "@apollo/federation": "^0.20.4",
    "@types/figlet": "^1.2.1",
    "@types/js-yaml": "^3.12.5",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.1",
    "eslint-config-google": "^0.14.0",
    "openapi-to-graphql-cli": "^2.2.5",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5"
  }
}