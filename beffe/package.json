{
  "name": "beffe",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "ts-run": "ts-node ./src/index.ts",
    "build": "tsc",
    "prod-start": "node ./dist/index.js gateway",
    "start": "npm run server",
    "server": "concurrently -k npm:server:*",
    "server:accounts": "node dist/accounts/index.js",
    "server:gateway": "wait-on tcp:4001 && node dist/index.js gateway",
    "devserver": "tsc && concurrently -k npm:devserver:*",
    "devserver:build": "tsc -w",
    "devserver:accounts": "nodemon --watch dist/accounts dist/accounts/index.js",
    "devserver:gateway": "wait-on tcp:4001 && nodemon --watch dist dist/index.js gateway -f example-config.yaml",
    "compile": "tsc",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint",
    "ts-cli": "ts-node ./src/cli.ts"
  },
  "keywords": [
    "GraphQL",
    "Backend for Frontend"
  ],
  "author": "Ben Greene",
  "license": "ISC",
  "dependencies": {
    "@apollo/gateway": "^0.21.0",
    "apollo-server": "^2.18.2",
    "apollo-server-express": "^2.18.2",
    "concurrently": "^5.3.0",
    "express": "^4.17.1",
    "figlet": "^1.5.0",
    "graphql": "^15.3.0",
    "js-yaml": "^3.14.1",
    "nodemon": "^2.0.5",
    "ts-node": "^9.0.0",
    "wait-on": "^5.2.0",
    "yargs": "^16.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^3.12.5",
    "@apollo/federation": "^0.20.4",
    "@types/figlet": "^1.2.1",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.1",
    "eslint-config-google": "^0.14.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5"
  }
}
